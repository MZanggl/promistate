{
    "compilerOptions": {
        "lib": ["ES5"],
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "./dist",
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}